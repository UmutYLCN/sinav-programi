{
  "name": "@sinav/monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Üniversite sınav programı planlama sistemi için pnpm monorepo",
  "packageManager": "pnpm@10.20.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --recursive run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive run lint",
    "format": "pnpm --recursive run format",
    "typecheck": "pnpm --recursive run typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "pnpm prettier --write"
  }
}
